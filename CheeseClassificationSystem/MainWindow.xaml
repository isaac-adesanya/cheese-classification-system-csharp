<Window x:Class="CheeseClassificationSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheeseClassificationSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"> 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Margin="10" HorizontalAlignment="Left">
            <Label Content="Cheese Type:"/>
            <ComboBox x:Name="cmbCheeseType" Width="200" HorizontalAlignment="Left" Margin="0,5,0,0">
                <ComboBoxItem Cursor="Arrow" Content="Gouda" IsSelected="True"/>
                <ComboBoxItem Cursor="Arrow" Content="Havarti"/>
                <ComboBoxItem Cursor="Arrow" Content="Klondyk Gruyere"/>
            </ComboBox>
            <Label Content="Description:"/>
            <TextBox x:Name="txtDescription" Width="200" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Label Content="Batch Number:"/>
            <TextBox x:Name="txtBatchNumber" Width="200" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Label Content="Cheese Date"/>
            <DatePicker x:Name="txtCheeseDate" Width="200" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Label Content="Number of cheeses in batch:"/>
            <TextBox x:Name="txtNumberOfCheeses" Width="200" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Button x:Name="btnSubmitCheese" Content="Submit Cheese" Width="90" HorizontalAlignment="Left" Margin="0,5,0,0" Click="btnSubmitCheese_Click"/>
            <Button x:Name="btnDeleteCheese" Content="Delete Cheese" Width="90" HorizontalAlignment="Left" Margin="0,5,0,0" Click="btnDeleteCheese_Click"/>
            <Button x:Name="btnSearchCheese" Content="Search Cheese" Width="90" HorizontalAlignment="Left" Margin="0,5,0,0" Click="btnSearchCheese_Click"/>
            <Button x:Name="btnShowAll" Content="Show All" Width="90" HorizontalAlignment="Left" Margin="0,5,0,0" Click="btnShowAll_Click"/>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10">
            <ListView x:Name="lstDisplay" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="lstDisplay_Selected" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="120"/>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="200"/>
                        <GridViewColumn Header="Classification" DisplayMemberBinding="{Binding Classification}" Width="120"/>
                        <GridViewColumn Header="Batch #" DisplayMemberBinding="{Binding BatchNumber}" Width="80"/>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding CreationDate}" Width="120"/>
                        <GridViewColumn Header="Count" DisplayMemberBinding="{Binding NumberOfCheeses}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
